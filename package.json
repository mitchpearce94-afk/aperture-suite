{
  "name": "aperture-suite",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "dev:web": "cd apps/web && npm run dev",
    "dev:ai": "cd services/ai-engine && uvicorn app.main:app --reload --port 8000"
  },
  "devDependencies": {
    "turbo": "^2.0.0"
  }
}
